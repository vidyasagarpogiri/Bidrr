<p id="notice"><%= notice %></p>

<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>End date</th>
      <th>Reserve price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.details %></td>
        <td><%= list.end_date %></td>
        <td><%= list.reserve_price %></td>
        <td><%= link_to 'Show', list %> | </td>
        <td><%= link_to 'Edit', edit_list_path(list) %> | </td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

