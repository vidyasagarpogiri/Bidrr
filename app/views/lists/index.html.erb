<p id="notice"><%= notice %></p>

<h1>Current Auctions</h1>
  <% @lists.each do |list| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to list.title, list_path(list) %></h3>
      </div>
      <div class="panel-body">
        <p><%= list.details %></p>
        <p class="pull-right"><small>Current Price:</small> <%= number_to_currency(list.bids.maximum(:amount)) %></p>
      </div>
    </div>
  <% end %>
<%= link_to 'New List', new_list_path %>
